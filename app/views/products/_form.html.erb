<h2>Standard Rails</h2>

<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :available_on %><br>
    <%= f.text_field :available_on, value: f.object.available_on ? l(f.object.available_on) : nil %>
  </div>
  <div class="field">
    <%= f.label :available_until %><br>
    <%= f.text_field :available_until, value: f.object.available_until ? l(f.object.available_until) : nil %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, value: number_with_precision(f.object.price, precision: 2) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

